<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/contact_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/event_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_subject"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/contact_pic"
            android:text="Start: 15/1/2022"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/event_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_date_start"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/contact_pic"
            android:text="End: 15/1/2022"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_location"
            android:layout_below="@+id/event_date_end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/contact_pic"
            android:text="Location: Karachi"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/event_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/contact_pic"
            android:text="Subject"
            android:textSize="30dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>